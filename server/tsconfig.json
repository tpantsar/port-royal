{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "outDir": "./dist",
    "allowJs": true, // Allow JavaScript files
    "module": "NodeNext", // Enable CommonJS module
    "esModuleInterop": true // Enable compatibility with CommonJS and ES modules
  },
  "include": ["**/*.ts", "eslint.config.js", "vitest.config.js"],
  "exclude": ["dist", "build", "node_modules", "coverage"]
}
