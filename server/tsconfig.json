{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true, // Allow JavaScript files
    "module": "nodenext", // Support ES module syntax
    "moduleResolution": "nodenext", // Ensure proper resolution of ES modules,
    "esModuleInterop": true // Enable compatibility with CommonJS and ES modules
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "build", "node_modules", "coverage"]
}
